generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  nome      String
  email     String   @unique
  senha  String
  nivel      String   // "admin" ou "cadastrador"
  
}

model Cidade {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  nome      String
  estado    String
 
}

model Cadastro {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  coords              String
  cidade              String
  endereco            String
  numero              String
  cep                 String
  isLastPost          Boolean
  localizacao         String
  transformador       String
  medicao             String
  telecom             String
  concentrador        String
  poste               String
  alturaposte         String
  estruturaposte      String
  tipoBraco           String
  tamanhoBraco        String
  quantidadePontos    String
  tipoLampada         String
  potenciaLampada     String
  tipoReator          String
  tipoComando         String
  tipoRede            String
  tipoCabo            String
  numeroFases         String
  tipoVia             String
  hierarquiaVia       String
  tipoPavimento       String
  quantidadeFaixas    String
  tipoPasseio         String
  canteiroCentral     String
  finalidadeInstalacao String
  especieArvore       String
  fotos               Foto[]   // Relacionamento com as fotos
 
}

model Foto {
    id      String @id @default(auto()) @map("_id") @db.ObjectId
    caminho String
    cadastroId  String @db.ObjectId
    cadastro    Cadastro   @relation(fields: [cadastroId], references: [id])
}